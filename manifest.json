{
    "manifest_version": 2,

    "name": "Bandcamp Saver",
    "version": "1.0.5",
    "description": "Allow to download mp3 from Bandcamp",

    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],

    "browser_action": {
        "default_title": "Bandcamp Saver",
        "default_icon":  "images/icon128.png"
    },

    "content_scripts": [
    {
      "matches": [
          "*://*.bandcamp.com/*"
      ],
      "js": [
          "libs/jquery-2.1.1.min.js",
          "js/content.js"
      ],
      "css": [
          "css/style.css"
      ]
    }
  ]
}
